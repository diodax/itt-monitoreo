<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Configuración de Mensajes SMS
        <small>Version 2.0</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Inicio</a></li>
        <li class="active">Mensajes</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    <!-- Your Page Content Here -->

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title"> <i class="fa fa-fw fa-envelope"></i> Mensajes</h3>
                </div>

                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-condensed table-bordered table-hover datatable-index">
                        <thead>
                            <tr>
                                <th style="width: 1px;"></th>
                                <th>Nombre de Usuario</th>
                                <th>Límite BPM Inferior</th>
                                <th>Tiempo de Espera</th>
                                <th>Total de Muestras</th>
                                <th>Fecha de Creación</th>
                                <th style="white-space: nowrap !important;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i=0; i < messages.length; i++) { %>
                                <tr>
                                    <td>
                                        <%= i %>
                                    </td>

                                    <td>
                                        <%= messages[i].user.username %>
                                    </td>
                                    <td>
                                        <%= messages[i].bpmThreshold %>
                                    </td>
                                    <td>
                                        <%= messages[i].requiredTics %>
                                    </td>
                                    <td>
                                        <%= messages[i].totalTics %>
                                    </td>
                                    <td>
                                        <%= messages[i].createdAt %>
                                    </td>

                                    <td style="width: 1%; white-space: nowrap !important; text-align: right;">
                                        <a href="/message/find/<%= messages[i].id %>" class="btn btn-default">Editar</a>
                                        <a class='btn btn-danger'>Eliminar</a>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>
<!-- /.content -->
